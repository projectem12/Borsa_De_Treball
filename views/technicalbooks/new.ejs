<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>
<main>
	<div class="card mt-2" style="width: 60%;">
    <div class="card-body">
	    <h5 class="card-title"><strong>New Technical Book</strong></h5>
		
	
	<form method="POST" action="/technicalbook/create">
		<div class="form-group">
			 <label for="title">Title</label>
			 <input type="text" name="title" class="form-control">
		</div>

		<div class="form-group">
			 <label for="publisger">Publisher</label>
			 <select type="text" name="publisher" class="form-control">
			 		<% publisherList.forEach(function(publisher) { %>
				    <option value="<%= publisher.id %>">		      
				      <%= publisher.name %>				  	      
				    </option>
		   		<% }); %>	
			 </select>			
		</div>

		
		<div class="form-group">
			 <label for="authors"><strong>Authors</strong></label>
			 	

  			<div class="row mt-2">
			 		
			 		<div class="col-md-1">
			 				<label for="authors">1</label>
			 		</div>
			    
			    <div class="col">
			      <input type="text" class="form-control" placeholder="First name" name="author[0][firstname]">
			    </div>
			    
			    <div class="col">
			      <input type="text" class="form-control" placeholder="Last name" name="author[0][lastname]">
			    </div>
  			</div>

  			<div class="row mt-2">
			 		<div class="col-md-1">
			 				<label for="authors">2</label>
			 		</div>
			    <div class="col">
			      <input type="text" class="form-control" placeholder="First name" name="author[1][firstname]">
			    </div>
			    <div class="col">
			      <input type="text" class="form-control" placeholder="Last name" name="author[1][lastname]">
			    </div>
  			</div>

  			<div class="row mt-2">
			 		<div class="col-md-1">
			 				<label for="authors">3</label>
			 		</div>
			    <div class="col">
			      <input type="text" class="form-control" placeholder="First name" name="author[2][firstname]">
			    </div>
			    <div class="col">
			      <input type="text" class="form-control" placeholder="Last name" name="author[2][lastname]">
			    </div>
  			</div>

  			<div class="row mt-2">
			 		<div class="col-md-1">
			 				<label for="authors">4</label>
			 		</div>
			    <div class="col">
			      <input type="text" class="form-control" placeholder="First name" name="author[3][firstname]">
			    </div>
			    <div class="col">
			      <input type="text" class="form-control" placeholder="Last name" name="author[3][lastname]">
			    </div>
  			</div>
  			
		</div>
		<div class="form-group">
			 <label for="summary">Summary</label>
			 <textarea  name="summary" class="form-control"></textarea>
		</div>
		<div class="form-group">
			 <label for="isbn">Isbn</label>
			 <input type="text" name="isbn" class="form-control">
		</div>

		<div class="form-group">
			 <label for="author"><strong>Genres</strong></label>
			 
			 		
			 		<% genresList.forEach(function(genre) { %>
				     
				    	<div class="form-check">
  								<input class="form-check-input" type="checkbox" name="genre" value="<%= genre.id %>">
  								<label class="form-check-label" for="inlineCheckbox1"> <%= genre.name %>	</label>
							</div> 	      
				  
		   		<% }); %>	

			
			
		</div>

		<button type="submit" class="btn btn-primary">Save
		</button>

	</form>

	<% if (typeof error !== "undefined") { %>
		<div class="alert alert-primary mt-2" role="alert">
		    
		    <p><%= error %></p>
		</div>
	<% } %>

	</div>
		
	</div>

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>